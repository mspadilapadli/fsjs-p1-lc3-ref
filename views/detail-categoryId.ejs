<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HacktivGAG</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <%- include('_navbar') %>
        <div class="container">
            <h5>
                Category : <%= category.name %>
            </h5>
            <div class="my-3">
                <a href="/memes/add" class="btn btn-info">Add Meme</a>
            </div>

            <table class="table table-striped fixed-table">
                <thead>
                    <tr class="table-info">
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Author</th>
                        <th scope="col">Total Vote</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>

                    </tr>
                </thead>
                <tbody>

                    <% memesWithStatus.forEach((meme)=> { %>
                        <tr>

                            <td>
                                <img src="<%= meme.imageURL %>" alt="ini gambar">
                            </td>
                            <td>
                                <%= meme.title %>
                            </td>
                            <td>
                                <%= meme.author %>
                            </td>
                            <td>
                                <%= meme.votes %>
                            </td>
                            <td>
                                <%= meme.status %>
                            </td>
                            <td>
                                <% if (meme.votes>= 10) { %>

                                    <a class="btn btn-outline-info" href="/memes/<%= meme.id %>/funny">IsFunny</a>
                                    <% } else { %>

                                        <a class="btn btn-outline-success" href="/memes/<%= meme.id %>/vote">Vote</a>
                                        <%} %>
                            </td>

                        </tr>
                        <% }) %>
                </tbody>
            </table>




        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>