<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HacktivGAG</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <%- include('_navbar') %>
        <div class="container">
            <h5>
                <%= title %>
            </h5>

            <div class="mb-4 mt-4">
                <a href="/memes/add" class="btn btn-primary">Add Meme</a>
            </div>



            <table class="table">
                <thead>
                    <tr class="table-info">
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Author</th>
                        <th scope="col">Total Vote</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>

                    </tr>
                </thead>
                <tbody>

                    <% data.Memes.forEach((item)=> { %>
                        <tr>

                            <td>
                                <img src="<%= item.imageURL %>" alt="ini gambar">

                            </td>
                            <td>
                                <%= item.title %>
                            </td>
                            <td>
                                <%= item.author %>
                            </td>
                            <td>
                                <%= item.votes %>
                            </td>
                            <td>
                                <%= item.showStatus() %>
                            </td>
                            <td>
                                <% if (item.votes>= 10) { %>

                                    <a class="btn btn-outline-success" href="/memes/<%= item.id %>/funny">IsFunny</a>
                                    <% } else { %>

                                        <a class="btn btn-outline-success" href="/memes/<%= item.id %>/vote">Vote</a>
                                        <%} %>
                            </td>



                            <!-- <td>
                                <a class="btn btn-primary" href="#">Delete</a>
                            </td> -->

                        </tr>
                        <% }) %>
                </tbody>
            </table>




        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>