<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MiniStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <%- include('_navbar') %>
        <div class="container">
            <h5>
                <%= isEdit ? "Update" : "Add" %> meme
            </h5>
            <form action="<%= action %>" method="post">
                <div class="row">

                    <div class="col mb-3">
                        <label class="form-label">Title
                            <% if (errors.title) { %>
                                <small class="text-danger ms-2">
                                    *<%= errors.title %>
                                </small>
                                <% } %>
                        </label>
                        <input type="text" class="form-control <%= errors.title ? 'is-invalid' : '' %>" name="title"
                            value="<%= meme.title %>">
                    </div>
                    <div class="col mb-3">
                        <label class="form-label">Author
                            <% if (errors.author) { %>
                                <small class="text-danger ms-2">
                                    *<%= errors.author %>
                                </small>
                                <% } %>
                        </label>
                        <input type="text" class="form-control <%= errors.author ? 'is-invalid' : '' %>" name="author"
                            value="<%= meme.author %>">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Image
                        <% if (errors.imageURL) { %>
                            <small class="text-danger ms-2">
                                *<%= errors.imageURL %>
                            </small>
                            <% } %>
                    </label>
                    <input type="text" class="form-control <%= errors.imageURL ? 'is-invalid' : '' %>" name="imageURL"
                        value="<%= meme.imageURL %>">
                </div>

                <div class="mb-3">
                    <label class="form-label">Categories
                        <% if (errors.CategoryId) { %>
                            <small class="text-danger ms-2">
                                *<%= errors.CategoryId %>
                            </small>
                            <% } %>
                    </label>
                    <select class="form-select <%= errors.CategoryId ? 'is-invalid' : '' %>" name="CategoryId">
                        <option value="" hidden> Choose the category</option>
                        <% categories.forEach((category)=>{ %>
                            <option value="<%= category.id %>" <%=meme.CategoryId==category.id ? "selected" : "" %>>
                                <%=category.name %> - <%=category.description %>
                            </option>
                            <%})%>
                    </select>
                </div>

                <button type="submit" class="btn btn-info">
                    <%= isEdit ? "Update" : "Add" %>
                </button>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>